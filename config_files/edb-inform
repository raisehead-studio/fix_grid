server {
    listen 443 ssl;
    server_name edb-inform.kcg.gov.tw;

    # --- 主憑證：TWCA ---
    ssl_certificate     /etc/ssl/edb-inform/twca_fullchain.crt;
    ssl_certificate_key /etc/ssl/edb-inform/twca_private.key;

    # --- 備援憑證：中華電信（註解，必要時切換） ---
    ssl_certificate     /etc/ssl/edb-inform/cht_fullchain.crt;
    ssl_certificate_key /etc/ssl/edb-inform/cht_private.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    server_tokens off;
    proxy_hide_header Server;
    more_clear_headers 'Server';

    add_header X-Frame-Options "DENY" always;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location = /mobile {
        return 404;
    }
}

server {
    listen 80;
    server_name edb-inform.kcg.gov.tw;

    server_tokens off;
    proxy_hide_header Server;
    more_clear_headers 'Server';

    add_header X-Frame-Options "DENY" always;

    return 301 https://$host$request_uri;
}
